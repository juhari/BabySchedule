<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <TextView 
    	android:layout_width="wrap_content" 
    	android:textAppearance="?android:attr/textAppearanceLarge" 
    	android:layout_height="wrap_content" 
    	android:id="@+id/nursing_which" 
    	android:text="@string/nursing_left" 
    	android:layout_gravity="center_horizontal"
    	android:layout_marginTop="10dp">
   	</TextView>
    <LinearLayout 
    	android:layout_width="fill_parent" 
    	android:id="@+id/linearLayout1" 
    	android:orientation="vertical" 
    	android:layout_height="fill_parent">
    	<LinearLayout
    	    android:layout_width="fill_parent"
    	    android:id="@+id/nursingleftla"
    	    android:orientation="horizontal"
    	    android:layout_height="wrap_content">
    	    <TextView
    	        android:layout_width="wrap_content" 
		    	android:textAppearance="?android:attr/textAppearanceLarge" 
		    	android:layout_height="wrap_content" 
		    	android:id="@+id/nursing_left" 
		    	android:text="@string/left" 
		    	android:layout_gravity="center_horizontal"
		    	android:layout_marginTop="10dp">
		   	</TextView>
	        <Chronometer 
	        	android:layout_width="wrap_content" 
	        	android:id="@+id/nursingLeftChrono" 
	        	android:layout_gravity="center_horizontal" 
	        	android:layout_height="wrap_content" 
	        	android:layout_marginLeft="15dp"
	        	android:layout_marginTop="40dp" 
	        	android:textSize="32dp">
	       	</Chronometer>
       	</LinearLayout>
       	<LinearLayout
    	    android:layout_width="fill_parent"
    	    android:id="@+id/nursingrightla"
    	    android:orientation="horizontal"
    	    android:layout_height="wrap_content">
    	    <TextView
    	        android:layout_width="wrap_content" 
		    	android:textAppearance="?android:attr/textAppearanceLarge" 
		    	android:layout_height="wrap_content" 
		    	android:id="@+id/nursing_right" 
		    	android:text="@string/right" 
		    	android:layout_gravity="center_horizontal"
		    	android:layout_marginTop="10dp">
		   	</TextView>
	        <Chronometer 
	        	android:layout_width="wrap_content" 
	        	android:id="@+id/nursingRightChrono" 
	        	android:layout_gravity="center_horizontal" 
	        	android:layout_height="wrap_content" 
	        	android:layout_marginLeft="15dp"
	        	android:layout_marginTop="40dp" 
	        	android:textSize="32dp">
	       	</Chronometer>
       	</LinearLayout>
        <Button 
        	android:layout_height="wrap_content" 
        	android:id="@+id/switch_breast_btn" 
        	android:text="@string/switch_breast" 
        	android:layout_gravity="center_horizontal" 
        	android:layout_marginTop="40dp" 
        	android:layout_width="fill_parent"
        	android:onClick="onClick">
       	</Button>
        <Button 
        	android:layout_gravity="center_horizontal" 
        	android:layout_height="wrap_content"
			android:id="@+id/finish_bursing_btn" 
			android:text="@string/finish_nursing" 
			android:layout_marginTop="40dp" 
			android:layout_width="fill_parent"
			android:onClick="onClick">
		</Button>
    </LinearLayout>
    
</LinearLayout>
